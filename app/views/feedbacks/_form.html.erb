
<%= simple_form_for(@feedback,url: (@feedback.new_record? ? transaction_feedbacks_url(transaction_id:  params[:transaction_id]) : feedback_url(id: @feedback,transaction_id:  params[:transaction_id])) ) do |f| %>

  <%# <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :transaction_id, :disabled => true  %>
    <%= f.label :'Please rate your transaction on a scale of 1 to 5, with 1 being poor and 5 being excellent.' %>
    <%= f.select :rate, [[5, 5], [4 , 4], [3, 3], [2, 2], [1, 1]], {}, {class: "form-control"} %>

<br>
    <%#= f.input :recommend %>
    <%= f.label :'Would you recommend us to a friend on a scale of 1 to 5, with 1 highly unlikely and 5 extremely likely.' %>
    <%= f.select :recommend, [[5, 5], [4 , 4], [3, 3], [2, 2], [1, 1]], {}, {class: "form-control"} %>

<br>
    <%= f.label :'Comment' %>
    <%= f.text_field :comment , {class: "form-control"} %><br>
    <%= f.label :'Share public feedback?' %>

    <%= f.input :share  %>
    <% @user = current_user %>
    <% if @user.admin %>
        <%= f.input :publish, :disabled => false  %>
    <% else %>
      <%= f.input :publish, :disabled => true  %>
    <% end %>

  </div>

  <div class="form-actions"  >
    <%= f.button :submit %>

  </div>
<% end %>
